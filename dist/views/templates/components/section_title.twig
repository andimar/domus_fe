<div class="section-title">
    <h3>{{title}}</h3>
    {% if controls %}
    <div class="controls">
        <button id="slideback_{{slider_id}}" class="slide_nav" href="javascript:void(0);">
            <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75" />
            </svg>      
        </button>
        <button id="slidenext_{{slider_id}}" class="slide_nav" href="javascript:void(0);">
            <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
            </svg>
        </button>
    </div>
    {% endif %}
</div>
